// This is the Prisma schema file

datasource db {
  provider = "sqlite"
  url      = "file:./backend/db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Site {
  id        Int      @id @default(autoincrement())
  name      String
  Frame     Frame?   @relation(fields: [frameId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  frameId   Int?
}

model Page {
  id        Int      @id @default(autoincrement())
  url       String
  frameId   Int
  Frame     Frame?   @relation(fields: [frameId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  schemaId  Int
  Schema    Schema?  @relation(fields: [schemaId], references: [id])
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  frame     Frame[]
}

model Prop {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Schema    Schema?  @relation(fields: [schemaId], references: [id])
  schemaId  Int?
}

model Schema {
  id          Int      @id @default(autoincrement())
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  props       Prop[]
  frameId     Int
  Frame       Frame?   @relation("Frame", fields: [frameId], references: [id])
  ParentFrame Frame    @relation("Children", fields: [frameId], references: [id])
  Page        Page[]
}

model Frame {
  id            Int       @id @default(autoincrement())
  name          String
  description   String?
  icon          String?
  category      Category? @relation(fields: [categoryId], references: [id])
  type          String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  categoryId    Int?
  isBase        Boolean   @default(false)
  code          String?
  ParentSchemas Schema[]  @relation("Frame")
  Schemas       Schema[]  @relation("Children")
  Site          Site[]
  Page          Page[]
}
