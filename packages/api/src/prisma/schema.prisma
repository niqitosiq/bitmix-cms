// This is the Prisma schema file

datasource db {
  provider = "sqlite"
  url      = "file:./backend/db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Site {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Pages     Page[]
}

model Page {
  id        Int      @id @default(autoincrement())
  url       String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  schemaId  Int
  Schema    Schema?  @relation(fields: [schemaId], references: [id])
  Site      Site?    @relation(fields: [siteId], references: [id])
  siteId    Int?
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  frame     Frame[]
}

model PropValue {
  id                   Int      @id @default(autoincrement())
  value                String?
  schemaReferenceId    Int?
  schemaReferenceField String?
  Schema               Schema?  @relation(fields: [schemaReferenceId], references: [id])
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  propId               Int?
  Prop                 Prop?
}

model Prop {
  id          Int        @id @default(autoincrement())
  name        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Schema      Schema?    @relation(fields: [schemaId], references: [id])
  schemaId    Int?
  propValue   PropValue? @relation(fields: [propValueId], references: [id])
  propValueId Int?       @unique
}

model Schema {
  id                   Int         @id @default(autoincrement())
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  props                Prop[]
  frameId              Int
  Page                 Page[]
  ReferenceToPropValue PropValue[]
  Frame                Frame?      @relation("Frame", fields: [frameId], references: [id])
  ParentSchema         Schema?     @relation("ChildrenSchema", fields: [parentSchemaId], references: [id])
  parentSchemaId       Int?
  ChildrenSchema       Schema[]    @relation("ChildrenSchema")
}

model Frame {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  description   String?
  icon          String?
  category      Category? @relation(fields: [categoryId], references: [id])
  type          String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  categoryId    Int?
  isBase        Boolean   @default(false)
  code          String?
  ParentSchemas Schema[]  @relation("Frame")
}
