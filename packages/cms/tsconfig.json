{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "baseUrl": "./",
        "jsx": "react-jsx",
        "paths": {
            "@shared/*": ["./src/shared/*"],
            "@features/*": ["./src/features/*"],
            "@widgets/*": ["./src/widgets/*"],
            "@entities/*": ["./src/entities/*"],
            "@pages/*": ["./src/pages/*"],
            "@packages/*": ["./src/packages/*"],
            "@api/*": ["../api/*"]
        }
    }
}
